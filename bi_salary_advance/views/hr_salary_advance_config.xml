<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_config_inherit" model="ir.ui.view">
            <field name="name">Accounting settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="recommended_apps" position="after">
                    <h2 groups="account.group_account_user">Salary Advance</h2>
                    <div class="row mt16 o_settings_container" id="sa_accounting" groups="account.group_account_user">
                        <div class="col-xs-12 col-md-6 o_setting_box" groups="account.group_account_user">
                            <div class="o_setting_right_pane">
                                <label for="sa_emp_account_id"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="sa_emp_account_id" class="oe_inline"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" groups="account.group_account_user">
                            <div class="o_setting_right_pane">
                                <label for="sa_treasury_account_id"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="sa_treasury_account_id" class="oe_inline"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" groups="account.group_account_user">
                            <div class="o_setting_right_pane">
                                <label for="sa_journal_id"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="sa_journal_id" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>